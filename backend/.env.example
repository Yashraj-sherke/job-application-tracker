# Server Configuration
PORT=5000
NODE_ENV=production

# Database
# MongoDB Atlas connection string
# Get this from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/JobTrackerDB?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-here-generate-a-secure-one
JWT_EXPIRE=7d

# Frontend URL (for CORS)
# Update this with your actual frontend URL after deployment
# Examples:
#   - Vercel: https://your-app.vercel.app
#   - Netlify: https://your-app.netlify.app
#   - Render: https://your-app.onrender.com
FRONTEND_URL=https://your-frontend-url.com
